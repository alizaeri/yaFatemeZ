<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#3d3e43"
    android:padding="10dp">


    <LinearLayout
        android:id="@+id/liPhaz1"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">
        <TextView
            android:id="@+id/TextView05"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:padding="10dp"
            android:shadowColor="#000000"
            android:shadowRadius="3"
            android:shadowDx="1"
            android:shadowDy="1"
            style="@style/texttt"
            android:layout_weight="1"/>

        <Spinner
            android:id="@+id/spin_lang"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            style="@style/set_radio"
            android:textAlignment="center"
            android:gravity="center"
            android:background="@drawable/yourbuttonbackground"
            android:dropDownVerticalOffset="40dp"
            android:layout_marginStart="4dp"
            android:shadowColor="#000000"
            android:shadowRadius="2"
            android:shadowDx="1"
            android:shadowDy="1"
            android:spinnerMode="dropdown"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="220dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">
        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:background="@drawable/set_save">
            <TextView
                android:textColor="#fff"
                android:textSize="25sp"
                android:id="@+id/save2"
                android:textAlignment="center"
                android:layout_centerInParent="true"
                android:lines="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"/>
            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/save_light2"
                android:layout_centerInParent="true"
                android:textAlignment="center"
                android:background="@drawable/set_savelight"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/set_save">
            <TextView
                android:textColor="#fff"
                android:textSize="25sp"
                android:id="@+id/save"
                android:textAlignment="center"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:gravity="center"/>
            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/save_light"
                android:textAlignment="center"
                android:layout_centerInParent="true"
                android:background="@drawable/set_savelight"
                />
        </RelativeLayout>
    </LinearLayout>


    <ImageView
        android:layout_width="190dp"
        android:layout_height="33dp"
        android:background="@drawable/set_logo"
        android:layout_marginTop="26dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>