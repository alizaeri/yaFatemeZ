<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/liSet"
    android:background="#3d3e43">

    <TextView
        android:id="@+id/test"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:background="@drawable/set_bgtest"
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:gravity="center"/>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/test"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal">
            <!---->

            <ImageView
                android:layout_width="133dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/set_logo"
                />

            <TextView
                android:id="@+id/textgroup_ar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/texttt"
                android:shadowColor="#000000"
                android:shadowRadius="3"
                android:shadowDx="1"
                android:shadowDy="1"
                />
            <RadioGroup
                android:id="@+id/radioGroup1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                >
                <RadioButton
                    android:id="@+id/rbnazanin"
                    android:layout_height="24dp"
                    style="@style/set_radio"
                    android:background="@drawable/yourbuttonbackground"
                    android:button="@android:color/transparent"
                    android:layout_width="79dp"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:shadowColor="#000000"
                    android:shadowRadius="2"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    />
                <RadioButton
                    android:id="@+id/rbhoma"
                    android:layout_height="24dp"
                    style="@style/set_radio"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/yourbuttonbackground"
                    android:button="@android:color/transparent"
                    android:layout_width="79dp"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:shadowColor="#000000"
                    android:shadowRadius="2"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    />
                <RadioButton
                    android:id="@+id/rbarabic"
                    android:layout_height="24dp"
                    style="@style/set_radio"
                    android:background="@drawable/yourbuttonbackground"
                    android:button="@android:color/transparent"
                    android:layout_width="79dp"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:checked="true"
                    android:shadowColor="#000000"
                    android:shadowRadius="2"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    />
            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#1b1a1f">

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#505156">

            </LinearLayout>

            <TextView
                android:id="@+id/TextView01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:shadowColor="#000000"
                android:shadowRadius="3"
                android:shadowDx="1"
                android:shadowDy="1"
                style="@style/texttt" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/set_seekbg">


                <SeekBar
                    android:id="@+id/sbsize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:indeterminate="false"
                    android:progressDrawable="@drawable/red_scrubber_progress"
                    android:thumb="@drawable/red_scrubber_control"/>

            </LinearLayout>

            <TextView
                android:id="@+id/TextView02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:shadowColor="#000000"
                android:shadowRadius="3"
                android:shadowDx="1"
                android:shadowDy="1"
                style="@style/texttt"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/set_seekbg">
                <SeekBar
                    android:id="@+id/sbspace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="60"
                    android:indeterminate="false"
                    android:progressDrawable="@drawable/red_scrubber_progress"
                    android:thumb="@drawable/red_scrubber_control"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#1b1a1f">

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#505156">

            </LinearLayout>

            <TextView
                android:id="@+id/TextView03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:shadowColor="#000000"
                android:shadowRadius="3"
                android:shadowDx="1"
                android:shadowDy="1"
                style="@style/texttt"/>
            <RadioGroup
                android:id="@+id/radioGroup2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp">

                <RadioButton
                    android:id="@+id/rbday"
                    android:layout_height="24dp"
                    android:layout_width="79dp"
                    style="@style/set_radio"
                    android:background="@drawable/yourbuttonbackground"
                    android:button="@android:color/transparent"
                    android:gravity="center"
                    android:layout_marginLeft="20dp"
                    android:shadowColor="#000000"
                    android:shadowRadius="2"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    />
                <RadioButton
                    android:id="@+id/rbnight"
                    android:layout_width="79dp"
                    android:layout_height="24dp"
                    style="@style/set_radio"
                    android:background="@drawable/yourbuttonbackground"
                    android:button="@android:color/transparent"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:layout_marginLeft="85dp"
                    android:checked="false"
                    android:shadowColor="#000000"
                    android:shadowRadius="2"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    />
            </RadioGroup>

            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/set_save">
                <TextView
                    style="@style/texttt"
                    android:id="@+id/save"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:text="ذخیره"
                    />
                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/save_light"
                    android:background="@drawable/set_savelight"/>


            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>