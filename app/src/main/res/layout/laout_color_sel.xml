<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="220dp"
    android:layout_height="300dp"
    android:background="#2e2f33">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="#fff"
        android:textSize="20sp"
        android:id="@+id/text_color_picker"
        android:gravity="center"/>
<LinearLayout
    android:layout_width="220dp"
    android:layout_height="240dp"
    android:orientation="horizontal"
    android:paddingRight="10dp"
    android:paddingLeft="10dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp">
        <ImageButton
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:id="@+id/btn_color1"
            android:background="#faf6db"/>
        <ImageButton
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:background="#f2d3a4"
            android:id="@+id/btn_color2"
            android:layout_marginTop="10dp"/>
        <ImageButton
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:background="#efb2c5"
            android:id="@+id/btn_color3"
            android:layout_marginTop="10dp"/>
        <ImageButton
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:background="#b9c2df"
            android:id="@+id/btn_color4"
            android:layout_marginTop="10dp"/>
        <ImageButton
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:background="#c7e8e8"
            android:id="@+id/btn_color5"
            android:layout_marginTop="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="5dp"
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="#505156">

    </LinearLayout>
    <LinearLayout
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="#000">
    </LinearLayout>

    <LinearLayout
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:orientation="vertical">
        <ImageButton
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:id="@+id/btn_color6"
            android:background="#cee6bd"/>
        <ImageButton
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:background="#ffffff"
            android:id="@+id/btn_color7"
            android:layout_marginTop="10dp"/>
        <ImageButton
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:background="#001432"
            android:id="@+id/btn_color8"
            android:layout_marginTop="10dp"/>
        <ImageButton
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:background="#143c32"
            android:id="@+id/btn_color9"
            android:layout_marginTop="10dp"/>
        <ImageButton
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:background="#323c0a"
            android:id="@+id/btn_color10"
            android:layout_marginTop="10dp"/>
    </LinearLayout>
</LinearLayout>
</LinearLayout>